
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model List<RoleViewModel>
<h2>Roller</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Rol İsmi</th>
            
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                
            </tr>
        }
    </tbody>
</table>
<br />
<a class="btn btn-primary" asp-controller="Roles" asp-action="RoleCreate" asp-area="Admin">Rol Ekle</a>




